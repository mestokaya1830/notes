üëâÔ∏è GET GENDER AS NULL
SELECT * FROM customers WHERE gender is Null;


üëâÔ∏è GET COUNTRY (NO DUPPLICATE)
SELECT DISTINCT cuntry FROM customers;


üëâÔ∏è GET COUNTRY LENGTH MUST BE 4
SELECT country FROM customers WHERE LENGTH(country) = 4;


üëâÔ∏è GET CUSTOMERS-COUNT AS COUNTRY
SELECT country, COUNT(*) FROM customers  GROUP BY country;


üëâÔ∏è GET CUSTOMERS-AVARAGE-AGE AS COUNTRY
SELECT country, AVG(age) FROM customers  GROUP BY country;


üëâÔ∏è GET CUSTOMERS_ID WHO HAS ORDERS //üí•Ô∏è wir dont need two tables because orders table has own custoomer_id
SELECT COUNT(*) FROM orders  GROUP BY customer_id;


üëâÔ∏è GET THREE OLDEST CUSTOMERS
SELECT age FROM customers ORDER BY age DESC LIMIT 3;


**************************Multiple Tables**********************************


üëâÔ∏è GET MUSTAFA'S ORDERS_COUNT
SELECT COUNT(*) FROM orders WHERE customer_id = (SELECT id FROM customers WHERE name = 'Mustafa' GROUP BY id);

üëâÔ∏è GET MUSTAFA'S ORDERS
SELECT * FROM orders WHERE customer_id = (SELECT id FROM customers WHERE name = 'Mustafa')

	üòÇÔ∏è with join (with join you can get both tables columns)
	SELECT * FROM orders 
	JOIN customers
	ON orders.customer_id = customers.id
	WHERE name = 'Mustafa';
	

üëâÔ∏è GET TURKEY'S ORDERS_COUNT
SELECT COUNT(*) FROM orders WHERE customer_id IN(SELECT id FROM customers WHERE country = 'Turkey' GROUP BY country)
	
üëâÔ∏è GET TURKEY'S ORDERS
SELECT * FROM orders WHERE customer_id IN(SELECT id FROM customers WHERE country = 'Turkey')

	üòÇÔ∏è with join (with join you can get both tables columns)
	SELECT * FROM orders 
	JOIN customers
	ON orders.customer_id = customers.id
	WHERE country = 'Turkey';

üëâÔ∏è GET CUSTOMERS INFO WHO HAS ORDERS
SELECT name, COUNT(*) FROM customers 
JOIN orders 
ON orders.customer_id = customers.id 
GROUP BY customers.id;


üëâÔ∏è GET CUSTOMERS INFO, TOTAL-ORDERS AND TOTAL-AMOUNT WHO HAS ORDERS
SELECT name, COUNT(*), SUM(orders.total) FROM customers
JOIN orders 
ON orders.customer_id = customers.id 
GROUP BY customers.id;


üëâÔ∏è GET CUSTOMERS INFO AND ORDERS-COUNT GREATHER THEN 2 WHO HAS ORDERS
SELECT name, count(*) FROM customers
JOIN orders 
ON orders.customer_id = customers.id 
GROUP BY customers.id
HAVING COUNT(*) >= 2;


üëâÔ∏è GET PRODUCTS LIST THAT mUSTAFA'S ORDERS
SELECT customers.name, products.`productName`, products.price, orders.quantity, orders.total FROM products 
JOIN orders ON orders.product_id = products.id
JOIN customers ON customers.id = orders.customer_id
WHERE name = 'Mustafa'  LIMIT 100







