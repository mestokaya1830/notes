extends layout
block content
  div.container
    form(action="/admin/users/search", method="post")
      input(type="text", name="name" placeholder="Search").search
    table
      thead
        tr.list-header
          th.list-header-th ID
          th.list-header-th Name
          th.list-header-th Date
          th.list-header-th Proccess
      body
        each item in users
          tr.list
            td #{item.ID}
            td #{item.name}
            td #{moment(item.date).format('DD-MM-yyyy')}
            //- td #{new Date(item.date).toLocaleDateString('tr')}
            td.form-btn-container
              a.form-btn.primary(href=`detailuser/${item.ID}`) Details
              a.form-btn.warning(href=`edituser/${item.ID}`) Edit
              a.form-btn.danger(href=`deleteuser/${item.ID}`) Delete